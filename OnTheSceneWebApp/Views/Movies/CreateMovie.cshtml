@model MovieModel 
@{
    ViewData["Title"] = "Create Movie";
}


<form method="post" asp-action="createmovie" asp-controller="movies">
    <div class="row">
        <div class="col-md">
            <div class="form-group">
                <label asp-for="Title" class="form-check-label">Title</label>
                <input class="form-control" asp-for="Title" placeholder="Enter title...">
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plot" class="form-check-label">Plot</label>
                <input asp-for="Plot" class="form-control" placeholder="Enter plot...">
                <span asp-validation-for="Plot"></span>
            </div>
            <div class="form-group">
                <label asp-for="PosterUrl" class="form-check-label">Poster Url</label>
                <input asp-for="PosterUrl" class="form-control" placeholder="Enter poster url...">
                <span asp-validation-for="PosterUrl"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateReleased" class="form-check-label">Date Released</label>
                <input asp-for="DateReleased" class="form-control">
                <span asp-validation-for="DateReleased"></span>
            </div>
            <div class="form-group">
                <label asp-for="Runtime" class="form-check-label">Runtime</label>
                <input asp-for="Runtime" class="form-control" placeholder="Enter runtime...">
                <span asp-validation-for="Runtime"></span>
            </div>
        </div>
        <div class="col-md">
            @for (int i = 0; i < 4; i++)
            {
                <div class="form-group">
                    <label asp-for="Actors[i]" class="form-check-label">Actor @(i+1): </label>
                    <input asp-for="Actors[i]" class="form-control" placeholder="Enter actor @(i+1)...">
                    <span asp-validation-for="Actors[i]"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Genre" class="form-check-label">Genre</label>
                <input asp-for="Genre" class="form-control" placeholder="Enter genre...">
                <span asp-validation-for="Genre"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <input type="submit" class="btn btn-primary" value="Submit">
        </div>
    </div>
</form>
